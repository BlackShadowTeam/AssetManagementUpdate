@using System.Web.Optimization
@model AssetManagementUI.ViewModels.AssetSetups.AssetLocationViewModel
@{
    ViewBag.Title = "AssetLocationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-1 col-sm-offset-1 col-md-10 col-sm-10">
    <div class="col-md-8 col-sm-8 noPadingLeft">
        <h2>New Asset Location</h2>
    </div>

    <div class="col-md-4 col-sm-4">
        <p>@Html.ActionLink("Back To List", "Index", "AssetLocations", null, new { @class = "btn btn-default align-right" })</p>

    </div>
</div>


@using (Html.BeginForm("Save", "AssetLocations"))
{
    <div id="saveForm" class="col-md-offset-1 col-sm-offset-1 col-md-6 col-sm-8">
        <div class="form-group">
            @Html.LabelFor(c => c.AssetLocation.OrganizationId)
            @Html.DropDownListFor(c => c.AssetLocation.OrganizationId, new SelectList(Model.Organizations, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetLocation.OrganizationId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetLocation.BranchId)
            @Html.DropDownListFor(c => c.AssetLocation.BranchId, new SelectList(Model.Branches, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetLocation.BranchId)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetLocation.Name)
            @Html.TextBoxFor(c => c.AssetLocation.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetLocation.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetLocation.ShortName)
            @Html.TextBoxFor(c => c.AssetLocation.ShortName, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetLocation.ShortName)
        </div>
        
        <div class="form-group">
            @Html.HiddenFor(c => c.AssetLocation.Id)
            @Html.AntiForgeryToken()
            <button id="saveButton" type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="@ViewBag.CssClass" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>@ViewBag.MessageType</strong>@ViewBag.Message
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/FormScript/branch.js"></script>

}

