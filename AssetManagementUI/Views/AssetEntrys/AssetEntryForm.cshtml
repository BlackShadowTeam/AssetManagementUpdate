@using System.Web.Optimization
@model AssetManagementUI.ViewModels.AssetEntrys.AssetEntryViewModel
@{
    ViewBag.Title = "AssetEntryForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-1 col-sm-offset-1 col-md-10 col-sm-10">
    <div class="col-md-8 col-sm-8 noPadingLeft">
        <h2>Asset Entry</h2>
    </div>

    <div class="col-md-4 col-sm-4">
        <p>@Html.ActionLink("Back To List", "Index", "AssetEntrys", null, new { @class = "btn btn-default align-right" })</p>

    </div>
</div>


@using (Html.BeginForm("Save", "AssetEntrys"))
{
    <div id="saveForm" class="col-md-offset-1 col-sm-offset-1 col-md-6 col-sm-8">
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.OrganizationId)
            @Html.DropDownListFor(c => c.AssetEntry.OrganizationId, new SelectList(Model.Organizations, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.OrganizationId)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.BranchId)
            @Html.DropDownListFor(c => c.AssetEntry.BranchId, new SelectList(Model.Branches, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.BranchId)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.AssetLocationId)
            @Html.DropDownListFor(c => c.AssetEntry.AssetLocationId, new SelectList(Model.AssetLocations, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.AssetLocationId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.Name)
            @Html.TextBoxFor(c => c.AssetEntry.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.Name)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.SerialNo)
            @Html.TextBoxFor(c => c.AssetEntry.SerialNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.SerialNo)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.Brand)
            @Html.TextBoxFor(c => c.AssetEntry.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.Brand)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.AssetTypeId)
            @Html.DropDownListFor(c => c.AssetEntry.AssetTypeId, new SelectList(Model.AssetTypes, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.AssetTypeId)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.AssetGroupId)
            @Html.DropDownListFor(c => c.AssetEntry.AssetGroupId, new SelectList(Model.AssetGroups, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.AssetGroupId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.AssetManufacurerId)
            @Html.DropDownListFor(c => c.AssetEntry.AssetManufacurerId, new SelectList(Model.AssetManufacurers, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.AssetManufacurerId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.AssetModelId)
            @Html.DropDownListFor(c => c.AssetEntry.AssetModelId, new SelectList(Model.AssetModels, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.AssetModelId)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c => c.AssetEntry.Status)
            @Html.DropDownListFor(c => c.AssetEntry.Status, new SelectList(Model.Status, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.AssetEntry.Status)
        </div>
        

        <div class="form-group">
            @Html.HiddenFor(c => c.AssetEntry.Id)
            @Html.AntiForgeryToken()
            <button id="saveButton" type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="@ViewBag.CssClass" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>@ViewBag.MessageType</strong>@ViewBag.Message
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/FormScript/assetEntry.js"></script>

}

