@model IEnumerable<Asset.Models.Library.EntityModels.OrganizationModels.Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departments</h2>

<p>@Html.ActionLink("New Department", "New", "Departments", null, new { @class = "btn btn-primary" })</p>

<table id="departmentTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Short Name</th>
            <th>Department Code</th>
            <th>Organization Name</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody></tbody>

</table>

@section scripts
{
    <script src="~/Scripts/FormScript/department.js"></script>
}
