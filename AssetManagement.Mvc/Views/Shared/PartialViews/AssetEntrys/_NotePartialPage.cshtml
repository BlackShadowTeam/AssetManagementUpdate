@model AssetManagement.Mvc.Models.ViewModels.Assets.NoteViewModel
<div class="row">
    <div class="col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            <div id="orgSaveForm">
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(c => c.Notes)
                        @Html.TextAreaFor(c => c.Notes, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(c => c.Notes, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        @Html.HiddenFor(c => c.AssetEntryId)
                        @Html.AntiForgeryToken()
                        <button id="saveNoteButton" type="button" class="btn btn-primary">Save</button>
                    </div>
                    <div class="form-group">
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>