@model AssetManagement.Mvc.Models.ViewModels.HumanResorce.EmployeeViewModel
@{
    ViewBag.Title = "Employee Form";
}

<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-md-offset-2 col-sm-8 col-md-8 ">
        <div class="box box-default">
            <div class="box-header">
                <h3 class="box-title">Employee Form</h3>
            </div>
            <div class="box-body">
                <div class="col-md-8 col-sm-8">
                    @using (Html.BeginForm("Save", "Employees"))
                    {
                        <div id="saveForm">
                            <div class="form-group">
                                @Html.LabelFor(c => c.OrganizationId)
                                @Html.DropDownListFor(c => c.OrganizationId, new SelectList(Model.Organizations, "Id", "Name"), "", new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.OrganizationId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.BranchId)
                                @Html.DropDownListFor(c => c.BranchId, new SelectList(Model.Branchs, "Id", "Name"), "", new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.BranchId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Department)
                               @Html.TextBoxFor(c => c.Department, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.Department, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Designation)
                                @Html.TextBoxFor(c => c.Designation, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.Designation, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(c => c.FirstName)
                                @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.FirstName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.LastName)
                                @Html.TextBoxFor(c => c.LastName, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.LastName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Code)
                                @Html.TextBoxFor(c => c.Code, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.Code, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.ContactNo)
                                @Html.TextBoxFor(c => c.ContactNo, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.ContactNo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Email)
                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Address)
                                @Html.TextBoxFor(c => c.Address, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(c => c.Address, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.HiddenFor(c => c.Id)
                                @Html.AntiForgeryToken()
                                <button id="saveButton" type="submit" class="btn btn-primary">Save</button>
                            </div>

                            <div class="form-group">
                                <p>@ViewBag.Message</p>
                            </div>
                        </div>
                    }
                    
                </div>
                
                <div class="col-md-4 col-sm-4">
                    <br />
                    <p>@Html.ActionLink("Back To List", "Index", "Employees", null, new { @class = "btn btn-info btn-sm" })</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/FormScript/employee.js"></script>
}